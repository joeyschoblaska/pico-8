pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
#include lander/player.p8
#include lander/ground.p8

function _init()
  g = 0.025 -- gravity
  make_player()
  make_ground()
end

function _update()
  move_player()
end

function _draw()
  cls()
  draw_stars()
  draw_ground()
  draw_player()
end

function rndb(low, high)
  return flr(rnd(high - low + 1) + low)
end

function draw_stars()
  srand(1)

  for i = 1, 50 do
    pset(rndb(0, 127), rndb(0, 127), rndb(5, 7))
  end

  srand(time())
end
